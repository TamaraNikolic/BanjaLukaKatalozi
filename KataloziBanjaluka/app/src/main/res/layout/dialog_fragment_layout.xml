<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="630sp">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8sp"
    android:paddingLeft="16sp"
    android:paddingRight="16sp"
    android:paddingTop="16sp"
    android:paddingBottom="8sp"
    android:textColor="@color/black"
    android:text="Vi koristite ​isteklu verziju aplikacije. Da biste nastavili pratiti kataloge na sajtu potrebno je da instalirate novu verziju aplikacije klikom na dugme ispod."/>

    <TextView
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:paddingBottom="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ukoliko ne ​razumijete poruku iznad kontaktirajte nas​:​​ "/>
    <TextView
        android:id="@+id/textView_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Facebooka "
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:paddingBottom="8sp"/>
    <TextView
        android:id="@+id/textView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Emaila: katalozi@banjaluka.com"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:paddingBottom="8sp"/>
    <TextView
        android:id="@+id/textView_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Telefona: ​051 962 405"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:paddingBottom="8sp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8sp">
    <TextView
        android:id="@+id/textView_no"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="@color/colorAccent"
        android:text="Ne prikazivati obavestenje"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8sp"/>
    <TextView
        android:id="@+id/textView_golePlay"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_weight="1"
        android:text="Da, želim pratiti kataloge"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8sp"/>
</LinearLayout>
</LinearLayout>